<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edenGreen"
    tools:context=".SetProfile_fragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/TextColor"
            android:text="Sign Up for DDC" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_below="@+id/txt1"
            android:textColor="@color/GreyShade"
            android:text="Create an account and access the customization Features and Data Storage." />
        <!--  <TextView
              android:id="@+id/txt3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_centerHorizontal="true"
              android:textSize="16dp"
              android:layout_below="@+id/txt2"
              android:textColor="@color/GreyShade"
              android:text="Features and Data Storage." />
   -->
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_bg_dark"
            android:textColor="@color/GreenText"
            android:id="@+id/signUpButton1"
            android:text="Sign up"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt2"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_bg"
            android:textColor="@color/GreenText"
            android:id="@+id/signUpButton2"
            android:text="SignUp with Google"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signUpButton1"
            />
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/TitleBarText"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/TextColor"
                android:textSize="20dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/signInButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Log in"
                android:clickable="true"
                android:textColor="@color/edenGreen"
                android:textSize="20dp"
                android:textAlignment="center"
                />
        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>
</FrameLayout>